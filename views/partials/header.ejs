<html>
    <head>
        <title>Blog App</title>
        <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.10/semantic.min.css"></link>
        <link rel="stylesheet" type="text/css" href="/stylesheets/app.css"></link>
    </head>
    <body>
        <div class="ui fixed inverted menu">
            <!--A container can be used inside of a menu to make sure menu items appear inline with page -->
            <div class="ui container">
                <div class="header item"><i class="code icon"></i>Blog App</div>
                <a href="/" class="item">Home</a>
                <a href="/blogs/new" class="item">New Post</a>
                <% if(!currentUser) { %>
                    <a href="/login" class="item">Login</a>
                    <a href="/signup" class="item">SignUp</a>
                <% } else { %>
                        <a class="item" href="#">Signed In As <%= currentUser.username %></a>
                        <a href="/logout" class="item">Logout</a>
                <%  } %>
            </div>
            
        </div>
